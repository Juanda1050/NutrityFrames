<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="needsTwoVM" type="com.application.app.modules.needstwo.data.viewmodel.NeedsTwoVM"/>
    </data>
    <ScrollView android:clipToPadding="false"
        android:fillViewport="true"
        android:id="@+id/scrollViewScrollview"
        android:layout_height="match_parent" android:layout_width="match_parent">
        <LinearLayout android:gravity="start"
            android:id="@+id/linearGroup55"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_58pxh"
            android:layout_marginStart="@dimen/_56pxh"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearGroup46"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageCalendario1"
                    android:layout_height="@dimen/_36pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_width="@dimen/_36pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_calendario1"/>
                <EditText android:ellipsize="end"
                    android:hint="@string/msg_fecha_de_nacimi"
                    android:id="@+id/etFechaDeNacimi"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_1pxh"
                    android:layout_marginStart="@dimen/_15pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_weight="0.84"
                    android:layout_width="0dp"
                    android:paddingBottom="@dimen/_7pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@={needsTwoVM.needsTwoModel.etFechaDeNacimiValue}"
                    android:textColorHint="@color/gray_500" style="@style/etRobotoromanmedium14"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearGroup47"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageCalendario2"
                    android:layout_height="@dimen/_36pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_1pxh"
                    android:layout_width="@dimen/_36pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_calendario1_1"/>
                <EditText android:ellipsize="end"
                    android:hint="@string/msg_altura_en_cent"
                    android:id="@+id/etAlturaEnCent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_weight="0.84"
                    android:layout_width="0dp"
                    android:paddingBottom="@dimen/_7pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@={needsTwoVM.needsTwoModel.etAlturaEnCentValue}"
                    android:textColorHint="@color/gray_500" style="@style/etRobotoromanmedium14"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearGroup48"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageCalendario3"
                    android:layout_height="@dimen/_36pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_width="@dimen/_36pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_calendario1_2"/>
                <EditText android:ellipsize="end"
                    android:hint="@string/lbl_peso_actual"
                    android:id="@+id/etPesoActual"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_1pxh"
                    android:layout_marginStart="@dimen/_15pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_weight="0.84"
                    android:layout_width="0dp"
                    android:paddingBottom="@dimen/_7pxv"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@={needsTwoVM.needsTwoModel.etPesoActualValue}"
                    android:textColorHint="@color/gray_500" style="@style/etRobotoromanmedium14"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnAvanzar"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_47pxh"
                android:layout_marginStart="@dimen/_49pxh"
                android:layout_marginTop="@dimen/_80pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_15pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_15pxv"
                android:singleLine="true"
                android:text="@string/lbl_avanzar"
                android:textAllCaps="false"
                style="@style/btnSolidRounded" tools:text="@string/lbl_avanzar"/>
        </LinearLayout>
    </ScrollView>
</layout>
